{
  "name": "roster-management-system",
  "version": "1.0.0",
  "description": "A comprehensive roster management system for societies and events",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "migrate": "ts-node src/db/migrations/index.ts",
    "prestart": "npm run build && npm run migrate",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:setup": "npm run migrate && npm run dev",
    "postinstall": "npm run build",
    "seed": "ts-node src/db/seeds/run.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "check-types": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@adminjs/express": "^6.1.1",
    "@types/nodemailer": "^6.4.17",
    "adminjs": "^7.8.15",
    "amqplib": "^0.8.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "firebase-admin": "^13.1.0",
    "ioredis": "^5.5.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^8.5.1",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.10.0",
    "pg": "^8.7.1",
    "sequelize": "^6.37.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.1",
    "twilio": "^5.4.4",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@adminjs/sequelize": "^4.1.1",
    "@types/amqplib": "^0.8.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^16.11.12",
    "@types/node-cron": "^3.0.1",
    "@types/pg": "^8.6.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.4.5",
    "prettier": "^2.8.8",
    "ts-jest": "^27.1.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.3"
  }
}
